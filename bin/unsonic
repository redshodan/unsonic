from __future__ import print_function

import sys
if ((sys.version_info[0] < 2) and (sys.version_info[1] < 7)):
    print("unsonic requires Python version 2.7 or higher.")
    sys.exit(-1)
    
### FIXME: Do this right once we have a setup.py and install etc.
import os
if os.path.islink(__file__):
    path = os.path.dirname(os.readlink(__file__))
else:
    path = os.path.dirname(__file__)
sys.path[0:0] = [os.path.abspath(os.path.join(path, "../unsonic")),
                 os.path.abspath(os.path.join(path, "../external/mishmash/src")),
                 os.path.abspath(os.path.join(path, "../external/eyed3/src"))]
    

__requires__ = 'pyramid==1.4.3'
import sys, time
from pkg_resources import load_entry_point


if "--reload" in sys.argv:
    reload = True
else:
    reload = False

wait = 3
while True:
    try:
        sys.exit(
            load_entry_point('pyramid==1.4.3', 'console_scripts', 'pserve')()
            )
        break
    except IndentationError, e:
        if reload:
            print("Failed to (re)start unsonic:", e)
            print("Restarting in %d seconds..." % wait)
        else:
            raise
    except SyntaxError, e:
        if reload:
            print("Failed to (re)start unsonic:", e)
            print("Restarting in %d seconds..." % wait)
        else:
            raise
    time.sleep(wait)
